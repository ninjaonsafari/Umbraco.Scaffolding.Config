				<link rel="apple-touch-icon" sizes="152x152" href="@image.Url?anchor=center&amp;mode=crop&amp;quality=90&amp;width=152&amp;heightratio=1&amp;maxHeight=2500&amp;maxWidth=2500" />
				<link rel="apple-touch-icon" sizes="180x180" href="@image.Url?anchor=center&amp;mode=crop&amp;quality=90&amp;width=180&amp;heightratio=1&amp;maxHeight=2500&amp;maxWidth=2500" />
			}
		}
	}
}

